{
    "name": "apps",
    "version": "0.1.0",
    "private": true,
    "homepage": ".",
    "main": "public/main.js",
    "dependencies": {
        "@material-ui/core": "^4.1.3",
        "electron-is-dev": "^1.1.0",
        "mobx": "^5.11.0",
        "mobx-react": "^6.1.1",
        "node-sass": "^4.12.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\""
    },
    "build": {
        "appId": "com.app.id",
        "productName": "MyApp",
        "copyright": "Copyright Â© 2019",
        "mac": {
            "category": "public.app"
        },
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "releases"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "concurrently": "^4.1.1",
        "electron": "^5.0.6",
        "electron-builder": "^20.44.4",
        "wait-on": "^3.2.0"
    }
}